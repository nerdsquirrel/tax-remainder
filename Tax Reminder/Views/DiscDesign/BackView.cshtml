@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BackView</title>    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/back-view.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="form-horizontal general-style">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row pdf-image general-style" id="DivToGeneratePDF">

                <div class="row nomargin tax-due">                    
                    <div class="col-md-4"></div>
                    <div class="col-md-8">
                        <h1 style="font: bold; color: white;margin-left: 10%;">TAX DUE</h1>
                        <div class="col-md-21">
                            <input type="number" />
                        </div>

                        <div class="col-md-21">
                            <input type="number"/>
                        </div>

                        <div class="col-md-21">
                            <input type="number" />
                        </div>
                    </div>
                </div>

                <div class="row nomargin vehicle-name">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <input type="text" value="" placeholder="Vehicle" />
                    </div>
                    <div class="col-md-4"></div>
                </div>

                <div class="row nomargin mot-due">
                    <div class="col-md-4"></div>
                    <div class="col-md-8">
                        <h1 style="font: bold; color: white;margin-left: 10%;">MOT DUE</h1>
                        <div class="col-md-21">
                            <input type="number" />
                        </div>

                        <div class="col-md-21">
                            <input type="number" />
                        </div>

                        <div class="col-md-21">
                            <input type="number" />
                        </div>
                    </div>
                </div>

            </div>

            @*<div id="editor"></div>*@

            <div class="row link-style">
                @Html.ActionLink("Tax & Mot Due", "GeneratePDF", "DiscDesign", null, new { @class = "center-block" })
            </div>
                       
        </div>
    </div>
</body>
</html>
