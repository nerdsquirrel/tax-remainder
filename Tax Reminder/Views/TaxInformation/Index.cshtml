@model IEnumerable<Tax_Reminder.Models.TaxInformationModel>

@{
    ViewBag.Title = "User Information";
}

<style>
    .general-style {
        margin-top: 5%;
    }

    th {
        background-color: #ccc;
    }
</style>


<div class="container general-style">
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VehicleRegistration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleMake)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expiry)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleRegistration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleMake)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Expiry)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                    @Html.ActionLink("Sent Disc", "BackView",
            new { controller = "DiscDesign", email = item.Email })
                </td>
            </tr>
        }

    </table>
</div>

