@using System.Web.UI.WebControls.Expressions
@model Tax_Reminder.Models.ContactUsModel
@{
    ViewBag.Title = "Home Page";
}

<style type="text/css">
    .glyphicon {
        font-size: 50px;
        color: #000;
    }

    .vcenter {
        margin-top: 10%;
        margin-left: 3%;
    }

    .nopadding {
        margin-right: 0px;
        margin-top: 5%;
    }

    .nopadding1 {
        padding: 0px 0px;
    }

    .vcenter1 {
        margin-top: 11.5%;
    }

    .howitworks-header1 {
        margin-bottom: 15px;
    }

    .input1 {
