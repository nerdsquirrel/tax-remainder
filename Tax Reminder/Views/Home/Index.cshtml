<!-- Introduction Section-->

<section id="intro" class="intro-section">
    <div class="space">
        <div class="col-md-6 col-lg-6 vcenter">
            <div class="row headerDesign">

                <div class="col-md-1 nopadding">
                    <a href="#">
                        <span class="glyphicon glyphicon-exclamation-sign"></span>
                    </a>
                </div>

                <div class="col-md-11">
                    <h2>AVOID A HEFTY <span style="color: red">£1,000</span> FINE</h2>
                    <h2>TAX & MOT YOUR VEHICLE ON TIME</h2>
                </div>


            </div>

            <div class="row" style="text-align: center;">
                @Html.ActionLink("Remind Me Now", "Create",
                    new { controller = "TaxInformation", id = 1 },
                    new { @class = "btn btn-success" })
            </div>
        </div>

        <div class="col-md-1 col-lg-1" style="width: 10px;">
            <span></span>
        </div>

        <div class="col-md-5 col-lg-5 img-style">
            <img src="~/Content/img/Untaxed_Car.jpg" class="img-responsive" />
        </div>

    </div>
</section>

